<div id="flash-messages" class="fixed top-20 right-4 z-[100] flex flex-col gap-3 pointer-events-none">
  <% flash.each do |type, message| %>
    <div 
      data-controller="flash"
      class="pointer-events-auto flex items-center gap-3 rounded-2xl px-4 py-3 shadow-2xl border transition-all duration-500 transform
             <%= type == 'notice' ? 'bg-emerald-50 border-emerald-100 text-emerald-800' : 'bg-red-50 border-red-100 text-red-800' %>"
    >
      <i data-lucide="<%= type == 'notice' ? 'check-circle' : 'alert-circle' %>" class="w-5 h-5"></i>
      <span class="text-sm font-bold tracking-tight"><%= message %></span>
      <button data-action="flash#close" class="ml-auto p-1 hover:bg-black/5 rounded-lg transition-colors">
        <i data-lucide="x" class="w-4 h-4 opacity-50"></i>
      </button>
    </div>
  <% end %>
</div>