<div class="py-10 bg-gray-50 min-h-screen">
  <header class="mb-8">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex items-center gap-3">
      <div class="p-2 bg-indigo-600 rounded-lg">
        <i data-lucide="layout-dashboard" class="w-6 h-6 text-white"></i>
      </div>
      <h1 class="text-3xl font-black leading-tight tracking-tight text-gray-900">Dashboard</h1>
    </div>
  </header>
  
  <main>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8"> 
      <%# Stats Cards %>
      <dl class="grid grid-cols-1 gap-5 sm:grid-cols-4">

      <div class="relative overflow-hidden rounded-2xl bg-white px-4 py-5 border border-gray-100 sm:p-6 transition-hover">
  <dt>
    <div class="absolute rounded-md bg-blue-50 p-3">
      <i data-lucide="eye" class="h-6 w-6 text-blue-600"></i>
    </div>
    <p class="ml-16 truncate text-sm font-bold text-gray-500 uppercase tracking-wider">Leituras Totais</p>
  </dt>
  <dd class="ml-16 flex items-baseline">
    <p class="text-3xl font-black text-gray-900"><%= @total_views %></p>
  </dd>
</div>
        <div class="relative overflow-hidden rounded-2xl bg-white px-4 py-5   border border-gray-100 sm:p-6 transition-hover ">
          <dt>
            <div class="absolute rounded-md bg-indigo-50 p-3">
              <i data-lucide="files" class="h-6 w-6 text-indigo-600"></i>
            </div>
            <p class="ml-16 truncate text-sm font-bold text-gray-500 uppercase tracking-wider">Total de Conteúdos</p>
          </dt>
          <dd class="ml-16 flex items-baseline">
            <p class="text-3xl font-black text-gray-900"><%= @posts_count %></p>
          </dd>
        </div>

        <div class="relative overflow-hidden rounded-2xl bg-white px-4 py-5 border border-gray-100 sm:p-6 transition-hover  ">
          <dt>
            <div class="absolute rounded-md bg-rose-50 p-3">
              <i data-lucide="video" class="h-6 w-6 text-rose-600"></i>
            </div>
            <p class="ml-16 truncate text-sm font-bold text-gray-500 uppercase tracking-wider">Vídeos Publicados</p>
          </dt>
          <dd class="ml-16 flex items-baseline">
            <p class="text-3xl font-black text-gray-900"><%= Post.video.count %></p>
          </dd>
        </div>

        <div class="relative overflow-hidden rounded-2xl bg-white px-4 py-5  border border-gray-100 sm:p-6 transition-hover ">
          <dt>
            <div class="absolute rounded-md bg-amber-50 p-3">
              <i data-lucide="sticky-note" class="h-6 w-6 text-amber-600"></i>
            </div>
            <p class="ml-16 truncate text-sm font-bold text-gray-500 uppercase tracking-wider">Notas Rápidas</p>
          </dt>
          <dd class="ml-16 flex items-baseline">
            <p class="text-3xl font-black text-gray-900"><%= Post.note.count %></p>
          </dd>
        </div>
      </dl>

      <%# Table Section %>
      <div class="mt-12">
        <div class="sm:flex sm:items-center justify-between bg-white p-6 rounded-t-3xl border-x border-t border-gray-100">
          <div class="sm:flex-auto">
            <h2 class="text-xl font-bold leading-6 text-gray-900 flex items-center gap-2">
              <i data-lucide="clock" class="w-5 h-5 text-gray-400"></i>
              Posts Recentes
            </h2>
            <p class="mt-2 text-sm text-gray-500">Gerencie os últimos conteúdos criados no seu blog.</p>
          </div>
          <div class="mt-4 sm:ml-16 sm:mt-0">
            <%= link_to new_post_path, class: "inline-flex items-center gap-2 rounded-xl bg-indigo-600 px-4 py-2.5 text-sm font-bold text-white   hover:bg-indigo-500 transition-all shadow-indigo-200" do %>
              <i data-lucide="plus" class="w-4 h-4"></i>
              Novo Post
            <% end %>
          </div>
        </div>

        <div class="overflow-hidden   ring-1 ring-gray-100 sm:rounded-b-3xl">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-4 pl-4 pr-3 text-left text-xs font-bold uppercase tracking-widest text-gray-500 sm:pl-6">Título</th>
                <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-gray-500">Views</th>
                <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-gray-500">Tipo</th>
                <th scope="col" class="px-3 py-4 text-left text-xs font-bold uppercase tracking-widest text-gray-500">Data</th> 
                <th scope="col" class="relative py-4 pl-3 pr-4 sm:pr-6 text-right text-xs font-bold uppercase tracking-widest text-gray-500">Ações</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 bg-white">
              <% @recent_posts.each do |post| %>
                <tr class="hover:bg-gray-50/50 transition-colors group">
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-bold text-gray-900 sm:pl-6 leading-6">
                    <%= post.title %> 
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 font-medium">
                    <div class="flex items-center gap-1.5">
                      <span class="inline-flex items-center gap-1 px-2 py-1 rounded-md <%= @views_by_post[post.id.to_i].to_i > 0 ? 'bg-green-50 text-green-700 ring-green-600/20' : 'bg-gray-50 text-gray-600 ring-gray-500/10' %> ">
                        <i data-lucide="eye" class="w-3.5 h-3.5"></i>  
                       <%= @views_by_post[post.id.to_i] || 0 %>
                      </span>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <span class="inline-flex items-center rounded-lg px-2.5 py-1 text-xs font-normal uppercase tracking-wider
                                 <%= case post.content_type
                                     when 'video' then 'bg-rose-50 text-rose-700 ring-1 ring-inset ring-rose-700/10'
                                     when 'article' then 'bg-indigo-50 text-indigo-700 ring-1 ring-inset ring-indigo-700/10'
                                     else 'bg-amber-50 text-amber-700 ring-1 ring-inset ring-amber-700/10'
                                     end %>">
                      <%= post.content_type %>
                    </span>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 font-medium">
                    <%= post.created_at.strftime("%d/%m/%Y") %>
                  </td>
                  <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <div class="flex justify-end gap-3 opacity-0 group-hover:opacity-100 transition-opacity">
                      <%= link_to post, class: "p-2 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all", title: "Ver" do %>
                        <i data-lucide="eye" class="w-4 h-4"></i>
                        
                      <% end %>
                      <%= link_to edit_post_path(post), class: "p-2 text-gray-400 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-all", title: "Editar" do %>
                        <i data-lucide="pencil" class="w-4 h-4"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </main>
</div>