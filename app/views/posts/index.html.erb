<div class="max-w-7xl mx-auto px-4 py-12">
  
  <% if @featured_post %>
    <%# --- SEÇÃO DESTAQUE --- %>
    <section class="mb-16 bg-gray-900 rounded-[2rem] overflow-hidden shadow-2xl">
      <div class="grid grid-cols-1 lg:grid-cols-12">
        
        <%# Lado da Imagem %>
        <div class="lg:col-span-7 h-[300px] lg:h-[500px] relative">
          <% if @featured_post.youtube_url.present? %>
            <% thumb_max = youtube_thumbnail_url(@featured_post.youtube_url, 'maxresdefault') %>
            <% thumb_backup = youtube_thumbnail_url(@featured_post.youtube_url, 'hqdefault') %>
            
            <img src="<%= thumb_max %>" 
                 class="w-full h-full object-cover opacity-90"
                 onerror="this.src='<%= thumb_backup %>'; this.onerror=null;">
            
            <div class="absolute inset-0 flex items-center justify-center bg-black/20 group cursor-pointer">
              <%= link_to @featured_post, class: "bg-white/20 backdrop-blur-md p-6 rounded-full hover:scale-110 transition-transform" do %>
                <i data-lucide="play" class="w-8 h-8 text-white fill-current"></i>
              <% end %>
            </div>
          <% else %>
            <div class="w-full h-full bg-gradient-to-br from-indigo-600 to-purple-700 flex items-center justify-center">
              <i data-lucide="sparkles" class="w-20 h-20 text-white/20"></i>
            </div>
          <% end %>
        </div>

        <%# Lado do Texto %>
        <div class="lg:col-span-5 p-8 lg:p-12 flex flex-col justify-center">
          <span class="text-blue-400 font-bold text-xs uppercase tracking-tighter mb-4">Em Destaque</span>
          <h1 class="text-3xl lg:text-5xl font-black text-white mb-6 leading-tight"><%= @featured_post.title %></h1>
          <div class="text-gray-400 text-lg mb-8 line-clamp-3">
            <%= strip_tags(@featured_post.content.to_s).truncate(180) %>
          </div>
          <%= link_to "Ler conteúdo completo", @featured_post, class: "bg-blue-600 text-white px-8 py-4 rounded-xl font-bold hover:bg-blue-700 transition-colors w-fit shadow-lg shadow-blue-900/20" %>
        </div>
      </div>
    </section>
  <% end %>

  <%# --- GRID DOS DEMAIS POSTS --- %>
  <div class="flex items-center gap-4 mb-8">
    <h2 class="text-2xl font-black text-gray-900 italic">Mais Recentes</h2>
    <div class="h-px flex-grow bg-gray-200"></div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @remaining_posts.each do |post| %>
      <%= render "post_card", post: post %>
    <% end %>
  </div>
</div>