<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <header class="flex justify-between items-end mb-12">
    <div>
      <h1 class="text-5xl font-black text-gray-900 tracking-tight">Blog do Genuino</h1>
      <p class="mt-3 text-lg text-gray-500 italic">Codando no Mac e voando com Rails 8.</p>
    </div>
    
    <% if authenticated? %>
      <%= link_to new_post_path, class: "flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full font-bold transition-all shadow-lg hover:shadow-blue-200" do %>
        <i data-lucide="plus" class="w-5 h-5"></i>
        Novo Post
      <% end %>
    <% end %>
  </header>

  

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @posts.each do |post| %>
      <article class="group bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300 flex flex-col overflow-hidden border-b-4 border-b-transparent hover:border-b-blue-500">
        
        <%# Área Visual do Card %>
        <div class="aspect-video bg-gray-100 flex items-center justify-center overflow-hidden relative">
          <% if post.youtube_url.present? %>
            <%# Pegamos a thumbnail do YouTube via ID %>
            <% video_id = post.youtube_url.match(/(?:v=|youtu\.be\/)([^&?]+)/)[1] rescue nil %>
            <img src="https://img.youtube.com/vi/<%= video_id %>/mqdefault.jpg" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" alt="<%= post.title %>">
            <div class="absolute inset-0 bg-black/20 flex items-center justify-center">
               <i data-lucide="play-circle" class="w-12 h-12 text-white/80 group-hover:text-white group-hover:scale-110 transition-all"></i>
            </div>
          <% else %>
            <i data-lucide="file-text" class="w-12 h-12 text-gray-300"></i>
          <% end %>
        </div>

        <%# Conteúdo do Card %>
        <div class="p-6 flex flex-col flex-grow">
          
        <div class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest mb-3">
            <% if post.youtube_url.present? %>
              <span class="bg-red-500/10 text-red-600 px-2 py-0.5 rounded flex items-center gap-1">
                <i data-lucide="youtube" class="w-3 h-3"></i> VÍDEO
              </span>
            <% elsif post.content.to_plain_text.length < 250 %>
              <%# Se o post for curtinho, ele vira uma NOTA %>
              <span class="bg-amber-500/10 text-amber-600 px-2 py-0.5 rounded flex items-center gap-1">
                <i data-lucide="sticky-note" class="w-3 h-3"></i> NOTA
              </span>
            <% else %>
              <span class="bg-blue-500/10 text-blue-600 px-2 py-0.5 rounded flex items-center gap-1">
                <i data-lucide="file-text" class="w-3 h-3"></i> ARTIGO
              </span>
            <% end %>
          </div>


          <h2 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
            <%= link_to post.title, post %>
          </h2>

          <div class="text-gray-500 line-clamp-3 mb-6 flex-grow">
            <%= strip_tags(post.content.to_s).truncate(120) %>
          </div>

          <div class="flex items-center justify-between mt-auto pt-6 border-t border-gray-50">
            <%= link_to post, class: "text-sm font-bold text-gray-900 flex items-center gap-1 group/link" do %>
              Ler mais 
              <i data-lucide="arrow-right" class="w-4 h-4 group-hover/link:translate-x-1 transition-transform"></i>
            <% end %>

            <% if authenticated? %>
              <div class="flex gap-3">
                <%= link_to edit_post_path(post), class: "text-gray-400 hover:text-amber-500" do %>
                  <i data-lucide="pencil" class="w-4 h-4"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </article>
    <% end %>
  </div>
</div>