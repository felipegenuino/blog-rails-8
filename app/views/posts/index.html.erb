<%# app/views/posts/index.html.erb %>
<div class="max-w-7xl mx-auto px-4 py-12">
  
  <%# 1. POST DE DESTAQUE (HERO) %>
  <% if @featured_post %>
    <section class="mb-16">
      <div class="bg-gray-900 rounded-[2.5rem] overflow-hidden grid grid-cols-1 lg:grid-cols-2 shadow-2xl">
 

        <div class="h-[300px] lg:h-[450px] relative bg-gray-800">
            <% if @featured_post.youtube_url.present? %>
              <% video_id = @featured_post.youtube_url.match(/(?:v=|youtu\.be\/)([^&?]+)/)[1] rescue nil %>
              
              <img src="https://img.youtube.com/vi/<%= video_id %>/maxresdefault.jpg" 
                  class="w-full h-full object-cover opacity-80"
                  onerror="this.src='https://img.youtube.com/vi/<%= video_id %>/hqdefault.jpg'; this.onerror=null;">
              
              <div class="absolute inset-0 flex items-center justify-center">
                <i data-lucide="play-circle" class="w-16 h-16 text-white/50"></i>
              </div>
            <% else %>
              <%# Caso o post de destaque não seja um vídeo, usamos um gradiente bonito %>
              <div class="w-full h-full bg-gradient-to-br from-blue-600 to-indigo-900 flex items-center justify-center">
                <i data-lucide="sparkles" class="w-20 h-20 text-white/20"></i>
              </div>
            <% end %>
          </div>
        <div class="p-8 lg:p-16 flex flex-col justify-center">
          <span class="text-blue-400 font-bold tracking-widest text-xs mb-4 uppercase">Destaque da semana</span>
          <h1 class="text-3xl lg:text-5xl font-black text-white mb-6"><%= @featured_post.title %></h1>
          <p class="text-gray-400 text-lg mb-8 line-clamp-3"><%= strip_tags(@featured_post.content.to_s).truncate(200) %></p>
          <%= link_to "Acessar conteúdo completo", @featured_post, class: "bg-white text-black px-8 py-4 rounded-full font-bold w-fit hover:bg-blue-500 hover:text-white transition-all" %>
        </div>
      </div>
    </section>
  <% end %>

  <%# 2. GRID DOS OUTROS POSTS %>
  <h2 class="text-2xl font-black mb-8">Posts Recentes</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @remaining_posts.each do |post| %>
      <%# Chamamos o partial aqui, passando a variável 'post' %>
      <%= render "post_card", post: post %>
    <% end %>
  </div>
</div>