<%# app/views/posts/edit.html.erb %>
<div class="max-w-4xl mx-auto py-12 px-4">
  <div class="mb-8 flex justify-between items-end">
    <div>
      <h1 class="flex items-center gap-x-3 text-2xl font-black tracking-tighter text-gray-900">
        <i data-lucide="settings-2" class="w-6 h-6 text-indigo-600"></i>
        Configurações do Post
      </h1>
      <p class="text-sm font-medium text-gray-500">Editando: <span class="text-gray-900"><%= @post.title %></span></p>
    </div>
    
    <%= link_to @post, class: "group flex items-center gap-2 text-sm font-bold text-indigo-600 hover:text-indigo-500 transition-all" do %>
      <i data-lucide="eye" class="w-4 h-4 transition-transform group-hover:scale-110"></i>
      Visualizar Post
    <% end %>
  </div>

  <%= render "form", post: @post %>
</div>