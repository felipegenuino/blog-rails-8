<div id="<%= dom_id post %>" class="flex flex-col items-start justify-between bg-white p-4 rounded-3xl shadow-sm border border-gray-100 hover:shadow-xl transition-shadow duration-300">
  <div class="relative w-full">
    <div class="aspect-video w-full rounded-2xl bg-gray-50 flex items-center justify-center overflow-hidden border border-gray-100 shadow-inner">
      <% if post.content.embeds.find(&:image?) %>
        <%= image_tag post.content.embeds.find(&:image?), class: "w-full h-full object-cover" %>
      <% else %>
        <span class="text-xs font-bold text-gray-400 uppercase tracking-widest"><%= post.content_type %></span>
      <% end %>
    </div>
  </div>

  <div class="max-w-xl px-2">
    <div class="mt-6 flex items-center gap-x-4 text-xs">
      <time datetime="<%= post.created_at %>" class="text-gray-500">
        <%= post.created_at.strftime("%d/%m/%Y") %>
      </time>
      <span class="rounded-full bg-indigo-50 px-3 py-1.5 font-bold text-indigo-600 uppercase">
        <%= post.content_type %>
      </span>
    </div>
    <div class="group relative">
      <h3 class="mt-3 text-lg font-bold leading-6 text-gray-900 group-hover:text-indigo-600">
        <%= link_to post do %>
          <span class="absolute inset-0"></span>
          <%= post.title %>
        <% end %>
      </h3>
      <p class="mt-4 line-clamp-3 text-sm leading-6 text-gray-600 italic">
        <%= post.summary.presence || "Explore os detalhes deste conteúdo clicando no título acima..." %>
      </p>
    </div>
  </div>
</div>