<article class="group bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300 flex flex-col overflow-hidden">
  <div class="aspect-video bg-gray-100 relative overflow-hidden">
    <% if post.youtube_url.present? %>
      <img src="<%= youtube_thumbnail_url(post.youtube_url, 'mqdefault') %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
    <% else %>
      <div class="w-full h-full flex items-center justify-center bg-gray-50 text-gray-300">
        <i data-lucide="file-text" class="w-10 h-10"></i>
      </div>
    <% end %>
  </div>

  <div class="p-6">
    <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600">
      <%= link_to post.title, post %>
    </h2>
    <p class="text-gray-500 text-sm line-clamp-2 mb-4">
      <%= strip_tags(post.content.to_s).truncate(100) %>
    </p>
    <%= link_to "Ler mais", post, class: "text-sm font-bold flex items-center gap-1 hover:gap-2 transition-all" %>
  </div>
</article>